<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rj.springcloud.user.mapper.TestMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseResultMap" type="com.rj.springcloud.user.entity.Test">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="base_Column_List">
        id, username, create_time, update_time
    </sql>

    <!-- 通用查询条件列 -->
    <sql id="base_query_condition">
        <if test="obj.username != null and obj.username != ''">
            and username = obj.username}
        </if>
        <if test="obj.createTime != null and obj.createTime != ''">
            and create_time = obj.createTime}
        </if>
        <if test="obj.updateTime != null and obj.updateTime != ''">
            and update_time = obj.updateTime}
        </if>
    </sql>

    <select id="selectPageByCondition" resultMap="baseResultMap">
        select
        <include refid="base_Column_List"></include>
        from t_test
        <where><include refid="base_query_condition"></include>
        </where>
    </select>
</mapper>